{
  "job": {
    "content": [
      {
        "reader": {
          "name": "hdfs-file-reader",
          "parameter": {
            "defaultFS": "hdfs://hadoop001:9000",
            "path": [
              "/user/test/test1"
            ]
          }
        },
        "writer": {
          "name": "hdfs-file-writer",
          "parameter": {
            "defaultFS": "hdfs://hadoop001:9000",
            "path": "/user/test/test2",
            "writeMode": "deleteIfExist"
          }
        }
      }
    ],
    "setting": {
      "speed": {
        "channel": "2"
      },
      "errorLimit": {
        "record": 0
      }
    }
  }
}